<div class="container">

	<% if @book.new_record? %>
		<h2>New Book</h2>
	<% else %>
		<h2>Edit Book</h2>
	<% end %>

	<%= form_for @book do |f| %>

		<%= render :partial => "form" , :locals => {:f => f} %>

	<% end %>



</div>



<div class="container">
	<div class="row">
		<div class="col-md-12">
			
			<h1>Book List</h1>

			<table class="table table-striped">
				<tr class="form_table">
					<td>Name</td>
					<td>Isbn</td>
					<td>Show</td>
					<td>Edit</td>
					<td>Delete</td>
				</tr>

				
				<% @books.each do |b| %>
					<tr>
						<td><%= b.name %></td>
						<td><%= b.isbn %></td>
						<td><%= link_to "Show" , book_path(b) , :class => "btn btn-primary" %></td>
						<td><%= link_to "Edit" , books_path(:edit_id => b.id) , :class => "btn btn-warning" %></td>
						<td><%= link_to "Delete" , book_path(b , :page => params[:page] ) , :method => :delete , :class => "btn btn-danger" %></td>
					</tr>
				<% end %>
				
			</table>
		
		<div class="text-center">
			<%= paginate @books %>
		</div>

		
		
		</div>
	</div>

</div>
	

